// Задача 19
// Напишите программу, которая принимает на вход пятизначное число и проверяет, 
// является ли оно палиндромом. Через строку решать нельзя.
// 14212 -> нет
// 12821 -> да
// 23432 -> да

int number, rem, reverse = 0, temp; // Вводим переменные для числа, вычисляемого остатка, обратного числа, временной переменной
Console.WriteLine("Введите число для проверки на палиндром");
number = Convert.ToInt32(Console.ReadLine());
temp = number;
while(number > 0)
{       
    rem = number % 10; // Определяем последнее число путём вычисления остатка;
    number = number / 10; // Определяем все числа, не включая последнее число;
    reverse = reverse * 10 + rem; // Последовательно вычисляем обратное число;
}   
if (temp == reverse)
{
    Console.WriteLine($"Число является {reverse} палиндромом");
}
else 
{
    Console.WriteLine($"Число {temp} не является палиндромом");
}